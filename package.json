{
  "name": "@hugojosefson/nonogram-solver",
  "version": "0.1.0",
  "description": "Solving nonogram puzzles.",
  "type": "module",
  "main": "src/api.js",
  "files": [
    "bin",
    "src"
  ],
  "bin": {
    "nonogram-solver": "bin/nonogram-solver"
  },
  "scripts": {
    "start": "bin/nonogram-solver You",
    "test": "run-s lint tap",
    "tap": "tap -Rspec --no-esm --node-arg=--no-warnings --node-arg=--experimental-modules --node-arg=--es-module-specifier-resolution=node",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "prepare": "run-s documentation",
    "documentation": "documentation readme --section=API --shallow --format=md src/api.js"
  },
  "lint-staged": {
    "*.{mjs,js,jsx}": [
      "standard --fix",
      "git add"
    ]
  },
  "repository": "hugojosefson/nonogram-solver",
  "keywords": [
    "nonogram",
    "puzzle",
    "solve",
    "solver"
  ],
  "author": "Hugo Josefson <hugo@josefson.org> (https://www.hugojosefson.com/)",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "documentation": "^12.1.3",
    "husky": "^3.0.0",
    "lint-staged": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "tap": "^14.9.2",
    "ts-node": "^8.5.2",
    "ts-standard": "^3.0.0"
  },
  "dependencies": {
    "get-stdin": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
